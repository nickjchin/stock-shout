<div class="row">
  <div class="col-md-12 d-block text-center">
    <h2 class="display-4 font-weight-normal">Login</h2>

    <form class="form login-form form-inline justify-content-center">
      <div class="form-group">
        <label class="col-form-label" for="email-login">email:</label>
        <input class="form-input ml-2" type="text" id="email-login" />
      </div>
      <div class="form-group ml-2">
        <label for="password-login">password:</label>
        <input class="form-input ml-2" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit" id="login-btn">login</button>
      </div>
    </form>
  </div>
</div>
<script src="/js/login.js"></script>